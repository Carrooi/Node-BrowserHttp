{
	"name": "browser-http",
	"description": "Simple (but advanced) HTTP for browser",
	"version": "2.2.0",
	"author": {
		"name": "David Kudera",
		"email": "sakren@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:sakren/node-browser-http.git"
	},
	"license": "MIT",
	"keywords": [
		"http",
		"client",
		"browser",
		"ajax",
		"url"
	],
	"engines": {
		"node": ">=0.9"
	},
	"main": "./lib/Http.js",
	"dependencies": {
		"q": "~1.0.0",
		"escape-regexp": "~0.0.1"
	},
	"devDependencies": {
		"mocha": "~1.17.0",
		"mocha-phantomjs": "~3.3.1",
		"phantomjs": "~1.9.2-6",
		"chai": "~1.8.1",
		"coffee-script": "~1.7.1",
		"simq": "~5.6.4"
	},
	"scripts": {
		"build": "npm run compile && npm run compile-standalone",
		"compile": "node ./node_modules/coffee-script/bin/coffee -co ./lib/ ./src/",
		"compile-standalone": "node ./node_modules/simq/bin/simq build --config ./config/source.json && ./node_modules/simq/bin/simq build --config ./config/minified.json",
		"compile-test": "cd test; node ../node_modules/simq/bin/simq build;",
		"pretest": "npm run build && npm run compile-test",
		"test": "node ./node_modules/mocha-phantomjs/bin/mocha-phantomjs -p ./node_modules/phantomjs/bin/phantomjs ./test/index.html"
	}
}